.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f6f6f6;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.message-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10rpx;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.message-content {
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.analysis {
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: #f0f8ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #07C160;
}

.analysis-item {
  display: flex;
  margin-bottom: 10rpx;
}

.analysis-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.analysis-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.analysis-loading {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.analysis-loading text {
  font-size: 26rpx;
  color: #999;
}

/* 输入区域 */
.input-area {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.input-box {
  display: flex;
  flex-direction: column;
}

.text-input {
  height: 80rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.input-actions {
  display: flex;
  justify-content: space-between;
}

.record-btn {
  flex: 1;
  height: 80rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
}

.record-btn.recording {
  background-color: #e0e0e0;
}

.send-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
}

/* 当前分析结果 */
.current-analysis {
  position: fixed;
  bottom: 180rpx;
  left: 20rpx;
  right: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.current-analysis-header {
  display: flex;
  justify-content: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.current-analysis-header text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.current-analysis-content {
  padding: 10rpx 0;
}