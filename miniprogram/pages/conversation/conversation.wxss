.container {
  padding: 20px;
}

.message {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.analysis {
  margin-top: 5px;
  padding: 5px;
  background-color: #e9f5fe;
  border-radius: 3px;
  font-size: 14px;
}

.current-analysis {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 15px;
  background-color: #fff;
  border-top: 1px solid #eee;
}