.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.intro {
  width: 100%;
  text-align: center;
  margin-bottom: 60rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-item text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.start-btn {
  width: 80%;
  margin-bottom: 30rpx;
  background-color: #07C160;
}

.test-btn {
  width: 80%;
  margin-bottom: 60rpx;
  background-color: #f0f0f0;
  color: #333;
}

.footer {
  margin-top: auto;
  padding: 30rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}