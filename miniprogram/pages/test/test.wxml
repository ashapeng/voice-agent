<view class="container">
  <view class="header">
    <text class="title">智能对话分析助手测试</text>
  </view>
  
  <view class="test-section">
    <view class="section-header">
      <text>前端模块测试</text>
    </view>
    <view class="test-buttons">
      <button class="test-btn" bindtap="testFrontend">测试前端模块</button>
      <button class="test-btn" bindtap="testSentiment">测试情感分析</button>
      <button class="test-btn" bindtap="testEmotion">测试情绪检测</button>
    </view>
  </view>
  
  <view class="test-section">
    <view class="section-header">
      <text>后端API测试</text>
    </view>
    <view class="test-buttons">
      <button class="test-btn" bindtap="testApiConnection">测试API连接</button>
      <button class="test-btn" bindtap="testApiAnalyze">测试分析功能</button>
    </view>
  </view>
  
  <view class="test-section">
    <view class="section-header">
      <text>集成测试</text>
    </view>
    <view class="test-buttons">
      <button class="test-btn primary" bindtap="testFullFlow">完整流程测试</button>
    </view>
  </view>
  
  <view class="test-input">
    <text class="input-label">测试文本:</text>
    <input class="text-input" value="{{testText}}" bindinput="onInputChange" placeholder="输入测试文本..." />
  </view>
  
  <view class="results" wx:if="{{testResults.length > 0}}">
    <view class="section-header">
      <text>测试结果</text>
    </view>
    <scroll-view scroll-y class="results-container">
      <view wx:for="{{testResults}}" wx:key="index" class="result-item {{item.success ? 'success' : 'failure'}}">
        <text class="result-title">{{item.title}}</text>
        <text class="result-message">{{item.message}}</text>
        <view wx:if="{{item.details}}" class="result-details">
          <text wx:for="{{item.details}}" wx:for-item="detail" wx:key="index">{{detail}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
  
  <view class="footer">
    <button class="clear-btn" bindtap="clearResults">清除结果</button>
    <button class="back-btn" bindtap="navigateBack">返回首页</button>
  </view>
</view>