.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  height: 100vh;
}

.header {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.test-section {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.section-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.section-header text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.test-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.test-btn {
  flex: 1;
  min-width: 200rpx;
  font-size: 28rpx;
  margin: 0;
}

.primary {
  background-color: #07C160;
  color: #fff;
}

.test-input {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.input-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.text-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.results {
  flex: 1;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.results-container {
  flex: 1;
  overflow-y: auto;
}

.result-item {
  margin-bottom: 20rpx;
  padding: 15rpx;
  border-radius: 8rpx;
  background-color: #fff;
  border-left: 8rpx solid #ccc;
}

.result-item.success {
  border-left-color: #07C160;
}

.result-item.failure {
  border-left-color: #FF4D4F;
}

.result-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-message {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.result-details {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx dashed #eee;
}

.result-details text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.clear-btn, .back-btn {
  width: 45%;
  font-size: 28rpx;
}